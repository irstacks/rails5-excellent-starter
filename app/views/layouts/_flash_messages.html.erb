<% flash.each do |key, value| %>
	<% if value.is_a?(String) %> <!-- workaround devise returning true -->
  	<div class="<%= flash_class(key) %> alert-dismissible fade in goes-away">
  	  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
  	    <span aria-hidden="true">&times;</span>
  	  </button>
  	  <%= value %>
  	</div>
  <% end %>
<% end %>

<!-- make the alert go away in 2 seconds -->
<script>
  $(function () {
  	$('.goes-away').delay(2000).slideUp(500);		
  });
</script>